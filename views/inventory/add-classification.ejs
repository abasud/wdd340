<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<p>The new classification name cannot contain a space or special character.</p>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form action="/inv/add-classification" method="post" class="classification-form">
    <label>Enter the classification name:<input type="text" name="classification_name" required pattern="^[a-zA-Z0-9]+$" value="<%= locals.classification_name %>"></label>
    <button type="submit">Create classification</button>
</form>